<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="events" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EventsController">
   <children>
      <MenuBar layoutY="1.0" prefHeight="30.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="Account">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#userAccount" text="My account" />
                  <MenuItem mnemonicParsing="false" onAction="#userLogout" text="Logout" />
               </items></Menu>
          <Menu mnemonicParsing="false" text="Data">
               <items>
                  <MenuItem fx:id="myRuns" mnemonicParsing="false" onAction="#myRunsClicked" text="My Runs" />
                  <MenuItem fx:id="apiRuns" disable="true" mnemonicParsing="false" onAction="#apiRunsClicked" text="All Runs" />
               </items></Menu>
        </menus>
      </MenuBar>
      <HBox layoutY="31.0" prefHeight="370.0" prefWidth="600.0">
         <children>
            <AnchorPane prefHeight="370.0" prefWidth="250.0" style="-fx-background-color: #e8e8e8;">
               <children>
                  <Label fx:id="userNameLabel" layoutX="14.0" layoutY="14.0" text="User: ">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Button fx:id="searchButton" layoutX="82.0" layoutY="306.0" mnemonicParsing="false" onAction="#runSearch" text="Search">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Label layoutX="17.0" layoutY="91.0" text="Name:">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Label layoutX="14.0" layoutY="140.0" text="Distance:">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Label layoutX="14.0" layoutY="194.0" text="Date:">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Label layoutX="14.0" layoutY="247.0" text="Location:">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="searchName" layoutX="64.0" layoutY="89.0" />
                  <Spinner fx:id="searchDistance" editable="true" layoutX="82.0" layoutY="138.0" prefHeight="26.0" prefWidth="86.0" />
                  <DatePicker fx:id="searchDate" layoutX="52.0" layoutY="192.0" />
                  <TextField fx:id="searchLocation" layoutX="82.0" layoutY="245.0" />
               </children>
            </AnchorPane>
            <AnchorPane fx:id="runList" prefHeight="370.0" prefWidth="350.0" />
         </children>
      </HBox>
   </children>
</AnchorPane>
